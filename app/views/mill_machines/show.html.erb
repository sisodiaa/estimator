<div class="row">
	<div class="col-2 text-right">
		<strong>Machine:</strong>
	</div>
	<div class="col-5">
		<%= @mill_machine.machine.machine_name %>
	</div>
</div>

<div class="row">
	<div class="col-2 text-right">
		<strong>Quantity:</strong>
	</div>
	<div class="col-5">
		<%= @mill_machine.quantity %>
	</div>
</div>

<div class="row mb-4">
	<div class="offset-md-1">
		<%= link_to 'Edit', edit_mill_machine_path(@mill, @mill_machine), class: 'btn btn-outline-primary mt-3' %>
		<%= link_to 'Back', mill_machines_path(@mill), class: 'btn btn-outline-primary mt-3' %>
	</div>
</div>

<div class="row">
	<div class="offset-md-1">
		<%= link_to 'Add a new machine', new_mill_machine_path(@mill), class: 'btn btn-primary' %>
	</div>
</div>
