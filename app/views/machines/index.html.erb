<%= render partial: "shared/breadcrumbs", object: @breadcrumbs, as: 'items' %>

<div class="row">
	<div class="mb-4">
		<%= link_to 'New Machine', new_machine_path, class: 'btn btn-primary' %>
	</div>
</div>

<div class="row">
	<table class="table table-striped">
		<thead class="thead-dark">
			<tr>
				<th scope="col">Section</th>
				<th scope="col">Make</th>
				<th scope="col">Model</th>
				<th scope="col">Sub section</th>
				<th scope="col">Drive Type</th>
				<th scope="col">Potential</th>
				<th scope="col" colspan="2"></th>
			</tr>
		</thead>

		<tbody>
			<% @machines.each do |machine| %>
				<tr>
					<td><%= machine.section.titleize %></td>
					<td><%= machine.make.titleize %></td>
					<td><%= machine.model %></td>
					<td><%= machine.sub_section.titleize %></td>
					<td><%= machine.drive_type %></td>
					<td><%= rupee_format(machine.potential) %></td>
					<td class="pt-2"><%= link_to 'Belts in machine', machine_belts_path(machine), class: 'btn btn-sm btn-outline-secondary' %></td>
					<td class="btn-group pt-2">
						<%= link_to 'Show', machine, class: 'btn btn-sm btn-outline-secondary' %>
						<%= link_to 'Edit', edit_machine_path(machine), class: 'btn btn-sm btn-outline-secondary' %>
						<%= link_to 'Destroy', machine, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-secondary' %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
