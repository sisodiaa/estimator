<%= render partial: "shared/breadcrumbs", object: @breadcrumbs, as: 'items' %>

<div class="row">
	<table class="table table-bordered w-50">
		<tr>
			<th>Make</th>
			<td><%= @machine.make.titleize %></td>
		</tr>
		<tr>
			<th>Model</th>
			<td><%= @machine.model %></td>
		</tr>
		<tr>
			<th>Section</th>
			<td><%= @machine.section.titleize %></td>
		</tr>
		<tr>
			<th>Sub Section</th>
			<td><%= @machine.sub_section.titleize %></td>
		</tr>
		<tr>
			<th>Potential</th>
			<td><%= "\u20B9 #{number_with_precision(@machine.potential, precision: 2)}" %></td>
		</tr>
	</table>
</div>


<div class="row">
	<div class="btn-group mr-2">
		<%= link_to 'Edit record', edit_machine_path(@machine), class: 'btn btn-outline-primary mt-3' %>
		<%= link_to 'Back to all records', machines_path, class: 'btn btn-outline-primary mt-3' %>
	</div>
	<%= link_to 'Belts in Machine', machine_belts_path(@machine), class: 'btn btn-outline-primary mt-3' %>
</div>
