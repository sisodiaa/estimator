<%= render partial: "shared/breadcrumbs", object: @breadcrumbs, as: 'items' %>
<div class="row">
	<div class="mb-4">
		<%= link_to 'New Belt', new_belt_path, class: 'btn btn-primary' %>
	</div>
</div>

<div class="row">
	<table class="table table-striped">
		<thead class="thead-dark">
			<tr>
				<th scope="col">Grade</th>
				<th scope="col">Rate</th>
				<th scope="col">Minor Joining Charges</th>
				<th scope="col">Major Joining Charges</th>
				<th scope="col">Rounding Off</th>
				<th scope="col"></th>
			</tr>
		</thead>

		<tbody>
			<% @belts.each do |belt| %>
				<tr>
					<td><%= belt.grade %></td>
					<td><%= rupee_format(belt.rate) %></td>
					<td><%= belt.minor_join_charge %></td>
					<td><%= belt.major_join_charge %></td>
					<td><%= belt.rounding_off %></td>
					<td class="btn-group pt-2">
						<%= link_to 'Show', belt, class: 'btn btn-sm btn-outline-secondary' %>
						<%= link_to 'Edit', edit_belt_path(belt), class: 'btn btn-sm btn-outline-secondary' %>
						<%= link_to 'Destroy', belt, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-secondary' %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
