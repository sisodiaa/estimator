<div class="row mb-4">
	<div>
		<div class="card-deck">
			<div class="card">
				<h5 class="card-header">Search for Mills by Machine Attributes</h5>
				<div class="card-body">
					<%= form_with url: search_path, method: :get, local: true do |form| %>
						<%= form.hidden_field :type, value: 'machine_mill' %>
						<div class="form-group">
							<%= form.label :section %>

							<%= form.select :section,
									options_for_select(section_dropdown_values),
									{ include_blank: true },
									class: 'form-control' %>
						</div>

						<div class="form-group">
							<%= form.label :maker %>

							<%= form.select :maker,
									[],
									{ include_blank: true },
									disabled: true,
									class: 'form-control' %>
						</div>

						<div class="form-group">
							<%= form.label :model %>

							<%= form.select :model,
								  [],
									{ include_blank: true },
									disabled: true,
									class: 'form-control' %>
						</div>

						<div class="actions">
							<%= form.submit 'Search', class: 'btn btn-primary', id: 'search_1', disabled: true %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
