<%= render partial: "shared/breadcrumbs", object: @breadcrumbs, as: 'items' %>

<div class="row">
	<div class="mb-4">
		<%= link_to 'Add a new machine', new_mill_machine_path(@mill), class: 'btn btn-primary' %>
	</div>
</div>

<div class="row">
	<div class="col">
		<p class="mb-1"><strong>Potential for <%= @mill.code %></strong>: <%= rupee_format(@mill.potential) %></p>
		<p><strong>Total Spindles in <%= @mill.code %></strong>: <%= @mill.total_spindles %></p>
	</div>
</div>

<div class="row">
	<table class="table table-striped">
		<thead class="thead-dark">
			<tr>
				<th scope="col">Section</th>
				<th scope="col">Maker</th>
				<th scope="col">Model</th>
				<th scope="col">Drive Type</th>
				<th scope="col">Quantity</th>
				<th scope="col">Spindles <span class="font-weight-light">(per machine)</span></th>
				<th scope="col">Spindles Count</th>
				<th scope="col">Potential</th>
				<th scope="col"></th>
			</tr>
		</thead>

		<tbody>
			<% @mill_machines.each do |mill_machine| %>
				<tr>
					<td><%= mill_machine.machine.section.titleize %></td>
					<td><%= mill_machine.machine.make.titleize %></td>
					<td><%= mill_machine.machine.model %></td>
					<td><%= mill_machine.machine.drive_type %></td>
					<td><%= mill_machine.quantity %></td>
					<td><%= mill_machine.spindles %></td>
					<td><%= mill_machine.spindles_count %></td>
					<td><%= rupee_format(mill_machine.potential) %></td>
					<td class="btn-group pt-2">
						<%= link_to 'Show', mill_machine_path(@mill, mill_machine), class: 'btn btn-sm btn-outline-secondary' %>
						<%= link_to 'Edit', edit_mill_machine_path(@mill, mill_machine), class: 'btn btn-sm btn-outline-secondary' %>
						<%= link_to 'Destroy', mill_machine_path(@mill, mill_machine), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-secondary' %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
