<%= render partial: "shared/breadcrumbs", object: @breadcrumbs, as: 'items' %>

<div class="row">
	<div class="mb-4">
		<%= link_to 'Add Belt to Machine', new_mill_machine_belt_path(@mill, @mill_machine), class: 'btn btn-primary' %>
	</div>
</div>

<div class="row">
	<table class="table table-striped">
		<thead class="thead-dark">
			<tr>
				<th scope="col">Belt</th>
				<th scope="col"></th>
			</tr>
		</thead>

		<tbody>
			<% @mill_machine_belts.each do |mill_machine_belt| %>
				<tr>
					<td><%= mill_machine_belt.belt.grade %></td>
					<td class="btn-group pt-2">
						<%= link_to 'Show', mill_machine_belt_path(@mill, @mill_machine, mill_machine_belt), class: 'btn btn-sm btn-outline-secondary' %>
						<%= link_to 'Destroy', mill_machine_belt_path(@mill, @mill_machine, mill_machine_belt), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-secondary' %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
